{
  "compilerOptions": {
    "incremental": false,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "removeComments": false,
    "noImplicitAny": false,
    "jsx": "react",
    "outDir": "dist",
    "lib": ["DOM", "ScriptHost", "ESNext"],
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@src/*": ["src/*"],
      "@svg/*": ["src/assets/svg/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true, // 如果为true, 当更改文件名大小写时会报错
    "isolatedModules": false
  },
  "include": ["src"]
}
